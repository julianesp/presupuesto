{
  "name": "sistema-presupuestal",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently --names BACKEND,FRONTEND --prefix-colors cyan,magenta --kill-others-on-fail \"npm run backend\" \"npm run frontend\"",
    "backend": "cd backend && python3 -m uvicorn app.main:app --host 0.0.0.0 --port 8000 --reload",
    "frontend": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "install:all": "cd frontend && npm install"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  }
}
